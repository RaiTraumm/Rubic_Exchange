from selenium import webdriver
from selenium.webdriver.support.wait import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from selenium.webdriver.common.by import By

options = webdriver.ChromeOptions()
driver = webdriver.Chrome(options=options, executable_path='D:\AutoTest\chromedriver.exe')
driver.get('https://app.rubic.exchange/') 
driver.maximize_window()


#------Функция ожидания элемента для клика
def wait_elements_located(xpath, driver):
    element = WebDriverWait(driver,15).until(
        EC.element_to_be_clickable(
            (By.XPATH,xpath)
        )
    )
    return element


#-----Функция ожидания прогрузки элементов
def wait_elements_clicable(xpath, driver):
    element = WebDriverWait(driver,15).until(
        EC.presence_of_element_located(
            (By.XPATH,xpath)
        )
    )
    return element


#------Возврат и открытие бургер меню
def back_to_burger_and_click():
   driver.execute_script("history.back();")
   wait_elements_clicable(xpath="//*[@class='burger-menu']",driver=driver).click()
 

Burger_menu = wait_elements_clicable(xpath="//*[@class='burger-menu']",driver=driver).click()

driver.find_element_by_xpath("//*[contains(text(),'О компании')]").click()
Landing = wait_elements_located(xpath="//button[text()='Start Trading']", driver=driver)
if Landing:
    print("СТРАНИЦА ЛЕНДИНГА ПРОГРУЖАЕТСЯ")

back_to_burger_and_click()

driver.find_element_by_xpath("//*[contains(text(),'Fiat on-ramp')]").click()
Onramper = wait_elements_located(xpath="//*[@id='onramper-widget']",driver=driver)
if Onramper:
    print("АЙФРЕЙМ ОНРАМПЕРА ПРОГРУЖАЕТСЯ")

back_to_burger_and_click()

driver.find_element_by_xpath("//*[contains(text(),'FAQ')]").click()
FAQ = wait_elements_located("//*[text()='FAQ']",driver=driver)
if FAQ:
    print("СТРАНИЦА С ВОПРОСАМИ ОТКРЫВАЕТСЯ")

driver.quit()
